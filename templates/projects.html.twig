{% extends 'base.html.twig' %}

{% block title %}Projects | {{ parent() }}{% endblock %}

{% block body %}
    <h1 class="sr-only">Projects</h1>
    <div class="px-2 my-6">
        <div class="flex flex-wrap items-stretch -mx-2">
            {% for project in projects %}
                <div class="w-full md:w-1/2 lg:w-1/3 px-2 my-2">
                    <article class="relative h-full rounded overflow-hidden shadow-lg bg-gray-700">
                        <img class="w-full border border-gray-700" src="img/projects/{{ project.image }}" alt="{{ project.name }} Image">
                        <div class="px-6 pt-4 pb-16">
                            <div class="font-semibold text-base uppercase tracking-wider mb-2">{{ project.name }}</div>
                            <div id="technologies" class="my-4 text-blue-200">
                                <span class="font-semibold">Technologies</span>
                                <ul class="list">
                                    {% for technology in project.technologies %}
                                        <li>{{ technology }}</li>
                                    {% endfor %}
                                </ul>
                            </div>

                            <div class="py-2">
                                {% for tag in project.tags %}
                                    <span class="inline-block shadow-lg bg-gray-800 rounded-full px-3 py-1 text-sm font-semibold text-blue-200 m-1">{{ tag }}</span>
                                {% endfor %}
                            </div>
                        </div>
                        {% if project.githubLink or project.onlineLink %}
                            <footer class="absolute bottom-0 w-full bg-gray-800 text-right p-2">
                                {% if project.onlineLink %}
                                    <a href="{{ project.onlineLink }}" target="_blank" rel="noopener noreferrer" class="{{ not project.githubLink ? 'btn ' }}mx-1">
                                        <svg class="fill-current w-3 mx-1" aria-hidden="true" data-prefix="fas" data-icon="desktop" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512">
                                            <path fill="currentColor" d="M528 0H48C21.5 0 0 21.5 0 48v320c0 26.5 21.5 48 48 48h192l-16 48h-72c-13.3 0-24 10.7-24 24s10.7 24 24 24h272c13.3 0 24-10.7 24-24s-10.7-24-24-24h-72l-16-48h192c26.5 0 48-21.5 48-48V48c0-26.5-21.5-48-48-48zm-16 352H64V64h448v288z" class=""></path>
                                        </svg>
                                        Online
                                    </a>
                                {% endif %}
                                {% if project.githubLink %}
                                    <a href="{{ project.githubLink }}" target="_blank" rel="noopener noreferrer" class="btn mx-1">
                                        <svg class="fill-current w-3 mx-1" aria-hidden="true" data-prefix="fab" data-icon="github" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 496 512">
                                            <path d="M165.9 397.4c0 2-2.3 3.6-5.2 3.6-3.3.3-5.6-1.3-5.6-3.6 0-2 2.3-3.6 5.2-3.6 3-.3 5.6 1.3 5.6 3.6zm-31.1-4.5c-.7 2 1.3 4.3 4.3 4.9 2.6 1 5.6 0 6.2-2s-1.3-4.3-4.3-5.2c-2.6-.7-5.5.3-6.2 2.3zm44.2-1.7c-2.9.7-4.9 2.6-4.6 4.9.3 2 2.9 3.3 5.9 2.6 2.9-.7 4.9-2.6 4.6-4.6-.3-1.9-3-3.2-5.9-2.9zM244.8 8C106.1 8 0 113.3 0 252c0 110.9 69.8 205.8 169.5 239.2 12.8 2.3 17.3-5.6 17.3-12.1 0-6.2-.3-40.4-.3-61.4 0 0-70 15-84.7-29.8 0 0-11.4-29.1-27.8-36.6 0 0-22.9-15.7 1.6-15.4 0 0 24.9 2 38.6 25.8 21.9 38.6 58.6 27.5 72.9 20.9 2.3-16 8.8-27.1 16-33.7-55.9-6.2-112.3-14.3-112.3-110.5 0-27.5 7.6-41.3 23.6-58.9-2.6-6.5-11.1-33.3 2.6-67.9 20.9-6.5 69 27 69 27 20-5.6 41.5-8.5 62.8-8.5s42.8 2.9 62.8 8.5c0 0 48.1-33.6 69-27 13.7 34.7 5.2 61.4 2.6 67.9 16 17.7 25.8 31.5 25.8 58.9 0 96.5-58.9 104.2-114.8 110.5 9.2 7.9 17 22.9 17 46.4 0 33.7-.3 75.4-.3 83.6 0 6.5 4.6 14.4 17.3 12.1C428.2 457.8 496 362.9 496 252 496 113.3 383.5 8 244.8 8zM97.2 352.9c-1.3 1-1 3.3.7 5.2 1.6 1.6 3.9 2.3 5.2 1 1.3-1 1-3.3-.7-5.2-1.6-1.6-3.9-2.3-5.2-1zm-10.8-8.1c-.7 1.3.3 2.9 2.3 3.9 1.6 1 3.6.7 4.3-.7.7-1.3-.3-2.9-2.3-3.9-2-.6-3.6-.3-4.3.7zm32.4 35.6c-1.6 1.3-1 4.3 1.3 6.2 2.3 2.3 5.2 2.6 6.5 1 1.3-1.3.7-4.3-1.3-6.2-2.2-2.3-5.2-2.6-6.5-1zm-11.4-14.7c-1.6 1-1.6 3.6 0 5.9 1.6 2.3 4.3 3.3 5.6 2.3 1.6-1.3 1.6-3.9 0-6.2-1.4-2.3-4-3.3-5.6-2z"></path>
                                        </svg>
                                        Github
                                    </a>
                                {% endif %}
                            </footer>
                        {% endif %}
                    </article>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
